body{ background-color:#F5F5F5; padding:0 0 80px;}

.wapper{ width:100%; margin:18px auto 0; }
.wapper .box{ width:94%; height:110px; margin:0 auto 15px; background:#fff; position:relative; padding:4px 0 4px }
.wapper .box:active{background:#f7f7f7}
.wapper .box:before{content: ''; display:block; position:absolute; right:14px; top:50px;  border-left:2px solid #d4d2d3; border-bottom:2px solid #d4d2d3; width:10px; height:10px;  transform: rotate(225deg); z-index:10;}
.wapper .box:after{content: ''; display:block; border:1px solid #dedddd; box-sizing:border-box; width:100%; height:100%;  position:absolute; top:0; left:0; }


@media (min--moz-device-pixel-ratio: 1.5), (-webkit-min-device-pixel-ratio: 1.5), (min-device-pixel-ratio: 1.5), (min-resolution: 144dpi), (min-resolution: 1.5dppx), (-ms-high-contrast:active), (-ms-high-contrast:none) {
.wapper .box:after{
	width:200%;
	height:200%;
	-webkit-transform:scale(.5);
	-ms-transform:scale(.5);
	-o-transform:scale(.5);
	transform:scale(.5);
	transform-origin:0 0;
	border:1px solid #dedddd;
}	
}

@media (-webkit-device-pixel-ratio: 1.5){
.wapper .box:after{
	width:150%;
	height:150%;
	-webkit-transform:scale(.6666);
	-ms-transform:scale(.6666);
	-o-transform:scale(.6666);
	transform:scale(.6666);
	border:1px solid #dedddd;
}	
}

@media (-webkit-device-pixel-ratio: 3){
.wapper .box:after{
	width:300%;
	height:300%;
	-webkit-transform:scale(.3333);
	-ms-transform:scale(.3333);
	-o-transform:scale(.3333);
	transform:scale(.3333);
	border:2px solid #dedddd;
}	
}

.wapper .box li{ width:100%;  color:#666; height:27px; line-height:27px;  font-size:15px; overflow:hidden; position:relative; text-indent:16px; }
.wapper .box li .n_r{ float:right; color:#999; margin:0 32px 0 0; font-size:14px;  text-align:right; }
.wapper .box li .time{ font-size:15px!important; color:#b0b0b0}
.wapper .box li .red{ color:#ff5b5b;}



